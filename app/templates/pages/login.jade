extends ../layouts/login_layout.jade

block title
  title Логин

block content
  .main_wrap.login_main_wrap
    .main.login_main
      .login.section_info.noPaddingRight
        header.section_header
          span.section_header_text Авторизируйтесь
        .login_form
          form
            span.desc Логин
            label.label(for='login')
              input#login.login_input(type='text', name='login', placeholder='Введите логин', data-tooltip='Введите логин')
            span.desc Пароль
            label.label(for='pass')
              input#pass.login_input(type='text', name='pass', placeholder='Введите пароль', data-tooltip='Введите пароль')
            button.button.button_sub(type='submit') Войти